page {
    height: 100%;
} 
.tipLabel {
    color: gray;
    font-size: 15px;
    margin: 5px;
}
.inputText {
    float: right;
    text-align: right;
    margin-right: 22px;
    margin-top: 11px;
    margin-bottom: 35px;
    font-size: 15px;
}
/*上传视频或打开相机*/
.select-video{
  width: 92%;
  height: 50px;
  display: flex;
  margin: 10px auto;
  justify-content:space-around;
  background-color:whitesmoke;
  border: 1px solid gainsboro;
}
.ple-text{
  font-size: 12px;
  align-self: center;
}
.up-alb{
  align-self: center;
  text-align: center;
}
.up-cam{
  align-self: center;
  text-align: center;
}
.up-img{
  width: 32px;
  height: 32px;
  align-self: center;
}
.up-text{
  font-size: 8px;
  color:teal;
}
.audio-radio{
  display: flex;
}
.mAudio{
  width: 85%;
}
.mRadio{
  width: 12%;
  align-self: center;
}
/*表单确定*/
.submitBtn {
    width: 80%;
    margin-top: 15px;
}

.goBack-all{
  margin-top: 10px;
  text-align: center;
  margin-bottom: 20px;
}
.goBack {
    font-size: 15px;
    color:crimson;
    margin-top: 10px;
}
.goBack-tx{
  font-size: 13px;
}

/*没登录的样式*/
.notLogin-container{
  width: 100%;
  height: 300px;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}
.notLogin{
  width: 140px;
  height: 160px;
  align-self: center;
}
.noLogin-text{
  margin-top: 10px;
  width: 150px;
  height: 100px;
  align-self: center;
  text-align: center;
  color:brown;
}
